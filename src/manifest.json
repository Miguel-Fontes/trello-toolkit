{
    "name": "Trello Toolkit",
    "version": "1.1.3",
    "description": "Adds some little features to Trello, making your life way easier!",
    "manifest_version": 2,
    "permissions": ["declarativeContent"],
    "content_scripts": [
      {
        "matches": ["https://trello.com/b/*"],
        "js": ["trello-toolkit.js"],
        "css": ["style.css"]
      }
    ]
  }
