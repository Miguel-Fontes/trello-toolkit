{
    "name": "Trello Toolkit",
    "version": "0.1.0",
    "description": "Adds some much needed management features on Trello",
    "manifest_version": 2,
    "permissions": ["declarativeContent"],
    "background": {
        "scripts": ["src/runtime/background.js"],
        "persistent": false
      },
      "content_scripts": [
        {
          "matches": ["https://*.trello.com/*"],
          "js": ["src/card-counter/card-counter.js"]
        }
      ]
  }
